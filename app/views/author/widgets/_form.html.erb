<%= form_for(item) do |f| %>
    <%= render_notification(item) %>
    <div class="input-group ">
      <label class="input-group-addon text-left"><%= t('category') %></label>
      <input class="form-control" type="text" disabled="disabled"
             value="<%= @category.name_value %>"/>
    </div>
    <%= render_text_field(f, :resource, is_edit?) %>
    <%= render_text_field(f, :name) %>
    <%= render_text_area(f, :description) %>
    <%= render_text_area(f, :thumbnail) %>
    <%= image_tag item.thumbnail unless item.thumbnail.nil? %>
    <%= render_number_field(f, :width, false, false, 'pull-left col-xs-6') %>
    <%= render_number_field(f, :height) %>
    <div class="panel-footer m-20">
      <%= cancel_button(redirect_url: redirect_on_cancel(@category)) -%>
      <%= render_submit(f) -%>
    </div>
<% end %>
<%= javascript_tag do %>
    $('#author_widget_thumbnail').on('change', function(e){$('.edit_author_widget > img').attr('src', e.target.value);});
<% end %>