<div class="col-lg-3 col-sm-6 col-xs-12">
  <% widgets = item.author_widgets %>
  <%= render 'author/author/ibox_edit',
      item_type: 'edit',
      item_box: widgets.empty? ? 'bg-gray' : 'bg-green',
      item: item,
      item_title: item.name_value,
      item_info: widgets.length,
      item_icon: 'glyphicon-th-large' %>
</div>