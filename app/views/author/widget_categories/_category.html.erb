<div class="col-sm-6 col-lg-3">
  <% widgets = item.author_widgets.length %>
  <% widgets_badge = widgets > 0 ? 'dark' : 'warning' %>
  <%= render 'author/author/ibox_edit',
      item_type: 'edit',
      item_bg: widgets > 0 ? 'bg-green' : 'bg-secondary',
      item: item,
      item_title: "#{t('widgets')} <span class=\"badge badge-#{widgets_badge}\">#{widgets}</span>".html_safe,
      item_info: item.name_value,
      item_icon: 'fa-th-large' %>
</div>