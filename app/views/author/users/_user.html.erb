<div class="col-sm-6 col-lg-3">
  <% items = item.owner_of.length %>
  <% items_badge = items > 0 ? 'dark' : 'warning' %>
  <%= render 'author/author/ibox_edit',
      item_type: 'edit',
      item_bg: items > 0 ? 'bg-green' : 'bg-gray',
      item: item,
      item_title: "
      #{t('items').pluralize} <span class=\"badge badge-#{items_badge}\">#{items}".html_safe,
      item_info: item.email,
      item_icon: 'fa-user' %>
</div>